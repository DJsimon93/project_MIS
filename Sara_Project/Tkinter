import tkinter as tk
import sqlite3

def check_interaction():
    # Get medicine names from input fields
    medicine1 = entry1.get()
    medicine2 = entry2.get()
    
    try:
        # Query SQLite database to check for interaction
        cursor.execute("SELECT * FROM medications WHERE Medication_1_Name = ? AND Medication_2_Name = ? OR Medication_1_Name = ? AND Medication_2_Name = ?", (medicine1, medicine2, medicine2, medicine1))
        interaction = cursor.fetchone()

        # Display result based on interaction
        if interaction:
            label_result.config(text="DANGER: Interaction detected")
        else:
            label_result.config(text="No danger: No interaction detected")
    except sqlite3.Error as e:
        # Display error message to the user
        label_result.config(text="Database error: " + str(e))

# Connect to SQLite database
try:
    conn = sqlite3.connect('medications.db')
    cursor = conn.cursor()
except sqlite3.Error as e:
    # Display error message to the user
    print("Database connection error:", e)
    exit()
# Create Tkinter window
root = tk.Tk()
root.title("Medicine Interaction Checker")

# Create input fields and labels
label1 = tk.Label(root, text="Enter Medicine 1:")
label1.grid(row=0, column=0, padx=10, pady=5)
entry1 = tk.Entry(root)
entry1.grid(row=0, column=1, padx=10, pady=5)

label2 = tk.Label(root, text="Enter Medicine 2:")
label2.grid(row=1, column=0, padx=10, pady=5)
entry2 = tk.Entry(root)
entry2.grid(row=1, column=1, padx=10, pady=5)

button_check = tk.Button(root, text="Check Interaction", command=check_interaction)
button_check.grid(row=2, column=0, columnspan=2, pady=10)

label_result = tk.Label(root, text="")
label_result.grid(row=3, column=0, columnspan=2)

# Run Tkinter event loop
root.mainloop()

# Close database connection
try:
    conn.close()
except sqlite3.Error as e:
    # Display error message (optional)
    print("Database connection closure error:", e)